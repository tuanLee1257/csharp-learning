@page
@model WebApplication2.Pages.Checkout.CheckoutModel
@{
}
<h1>Your Order!</h1>
@{
    var imagePath = "~/images/Pizzas/" + (Model.ImageTitle+".png");
}
<div class="alignalign-content-center">
    <div class="col-3 mx-auto mb-5">
        <img class="w-100" asp-append-version="true" src="@imagePath"/>
        <p>Your order for the @Model.PizzaName pizza is ready</p>
        <p>Totoal price for your orrder is: @Model.PizzaPrice</p>
        <br />
        <a class="btn alert-primary mt-1 mx-auto" asp-area="ThankyouPage">Comfirm Order</a>
    </div>
</div>
