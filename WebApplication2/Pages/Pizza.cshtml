@page
@model WebApplication2.Pages.PizzaModel
@{
}
<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great selection of Pizzas </h1>
        <h4>Choose one, or try our Pizza Builder</h4>
        <h4>No need to give any of your details</h4>
        <h4>We already know everything</h4>
        <p class="smallText">
            <i>Only one pizza per order.</i>
        </p>
        <div class="container">
            <div class="row">
                <div class="col-12 mb-5 mt-5">
                    <div class="w-100 row makeYourOwnDiv">
                        <div class="col-4">
                            <img src="~/images//Pizzas/Create.png" class="w-100"  alt="" />
                        </div>
                        <div class="col-8 align-items-center">
                            <div class="align-middle makeYourOwnText">
                                <h3 style="text-align:left;">Create yor own Pizza</h3>
                                <p style="text-align:left;">Make yor own Pizza with or PizzaMaker</p>
                                <a class="btn btn-primary mt-1" asp-area="" style="float:left" asp-page="Forms/CustomPizza">Try Now!</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4 mb-5 ">
                    <img src="" class="w-100" asp-append-version="true"/>
                    <a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout">Get this Pizza</a>
                    <br />
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var pizza in Model.listPizza)
            {
                var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle+".png");
                <div class="col-4 mb-5">
                    <img src=@imagePath class="w-100" asp-append-version="true"/>
                    <a class="btn btn-primary mt-1" 
                         asp-route-ImageTitle="@pizza.ImageTitle"
                         asp-route-PizzaPrice ="@pizza.FinalPrice"
                         asp-page="Checkout/Checkout"
                    >Get this pizza</a>
                    <br />
                </div>
            }
        </div>
    </div>
</div>